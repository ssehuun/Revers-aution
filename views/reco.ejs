	<script>
		// 기존+데이터 안심
		$('#co3').on('click', function(){
			$.ajax({
				type: "GET",
			    url: "/addOption",
			    dataType: "json",
			    cache:false,
			    success: function (data) {
					console.log(data);
					$('#Co_select3').empty();
					let str = '';
					str += '<option>선택</option>'
					for(let i in data){
						str += '<option>'+(parseInt(i)+1)+'. '+data[i].spName+' '+data[i].coName+'</option>'
					}
					$(str).appendTo('#Co_select3')
				}
			})
		})
		// 가족할인
		$('#di1').on('click', function(){
			$.ajax({
				type: "GET",
			    url: "/familyDc",
			    dataType: "json",
			    cache:false,
			    success: function (data) {
					console.log(data);
					$('#Di_select1').empty();
					let str = '';
					str += '<option>선택</option>'
					for(let i in data){
						str += '<option>'+(parseInt(i)+1)+'. '+data[i].diName+' '+data[i].content+'</option>'
					}
					$(str).appendTo('#Di_select1')
				}
			})
		})
		// 장기할인
		$('#di2').on('click', function(){
			$.ajax({
				type: "GET",
			    url: "/longUseDc",
			    dataType: "json",
			    cache:false,
			    success: function (data) {
					console.log(data);
					$('#Di_select2').empty();
					let str = '';
					str += '<option>선택</option>'
					for(let i in data){
						str += '<option>'+(parseInt(i)+1)+'. '+data[i].diName+' '+data[i].content+'</option>'
					}
					$(str).appendTo('#Di_select2')
				}
			})
		})
		// 단말기 정보
		$('#di3').on('click', function(){
			$.ajax({
				type: "GET",
			    url: "/productInfo",
			    dataType: "json",
			    cache:false,
			    success: function (data) {
					console.log(data);
					$('#Di_select3').empty();
					let str = '';
					for(let i in data){
						str += '<tr>'
						str += '<td scope="row">'
						str += '<input type="radio" name="Pd_select"value="코드값">'
						str += '</td>'
						str += '<td>'+data[i].pdname+'</td>'
						str += '<td>'+data[i].memsize+'</td>'
						str += '<td>'+data[i].cpname+'</td>'
						str += '<td>'+data[i].pdprice+'</td>'
						str += '<td>'+data[i].grprice+'</td>'
						str += '</tr>'
					}
					$(str).appendTo('#Di_select3')
				}
			})
		})
	</script>
